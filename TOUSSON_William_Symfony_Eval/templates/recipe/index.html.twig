{% extends 'base.html.twig' %}

{% block title %}Recettes{% endblock %}

{% block body %}
<div class="container mt-4">

    <h1>üçΩÔ∏è Recettes (API)</h1>

    <form method="get" action="{{ path('app_recipes') }}" class="row g-2 mb-4">
        <div class="col-md-8">
            <input
                type="text"
                name="q"
                class="form-control"
                placeholder="Rechercher une recette..."
                value="{{ query }}"
            >
        </div>

        <div class="col-md-2 d-grid">
            <button type="submit" class="btn btn-primary">
                Rechercher
            </button>
        </div>

        <div class="col-md-2 d-grid">
            <a href="{{ path('app_recipes') }}" class="btn btn-outline-secondary">
                Reset
            </a>
        </div>
    </form>

    <div class="row">
        {% for recipe in recipes %}
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img
                        src="{{ recipe.strMealThumb }}"
                        class="card-img-top"
                        alt="{{ recipe.strMeal }}"
                    >

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{ recipe.strMeal }}</h5>

                        <a
                            href="{{ path('app_recipe_show', { id: recipe.idMeal }) }}"
                            class="btn btn-primary mb-2"
                        >
                            Voir la recette
                        </a>

                        {% if is_granted('ROLE_USER') %}
                            <form
                                method="post"
                                action="{{ path('app_favorite_toggle', { id: recipe.idMeal }) }}"
                                class="mt-auto"
                            >
                                <input type="hidden" name="title" value="{{ recipe.strMeal }}">
                                <input type="hidden" name="image" value="{{ recipe.strMealThumb }}">

                                {% if recipe.idMeal in favoriteIds %}
                                    <button class="btn btn-danger w-100">
                                        Retirer des favoris
                                    </button>
                                {% else %}
                                    <button class="btn btn-warning w-100">
                                        Ajouter aux favoris
                                    </button>
                                {% endif %}
                            </form>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% else %}
            <p>Aucune recette trouv√©e</p>
        {% endfor %}
    </div>

</div>
{% endblock %}
